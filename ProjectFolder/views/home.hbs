<script>
    function reserveSeat(button) {
        const arena = button.getAttribute('data-arena');
        localStorage.setItem('selectedArena', arena);
        // You can also store the background image URL if needed
        let backgroundImage = '';
        switch (arena) {
            case 'Madison Square Garden':
                backgroundImage = 'images/madison-square-garden.jpg';
                break;
            case 'Target Center':
                backgroundImage = 'images/target-center.png';
                break;
            case 'Crypto.com Arena':
                backgroundImage = 'images/crypto.com-arena.jpeg';
                break;
            case 'Chase Center':
                backgroundImage = 'images/chase-center.jpg';
                break;
            case 'Wells Fargo Center':
                backgroundImage = 'images/wells-fargo-center.jpg';
                break;
        }
        localStorage.setItem('backgroundImage', backgroundImage);
    }

    function scrollToContent(event) {
        event.preventDefault();
        document.querySelector('#main-page-content').scrollIntoView({ behavior: 'smooth' });
    }

    // Check for the presence of the hash and scroll if necessary
    document.addEventListener('DOMContentLoaded', function() {
        if (window.location.hash === '#main-page-content') {
            document.querySelector('#main-page-content').scrollIntoView({ behavior: 'smooth' });
        }
    });
</script>
